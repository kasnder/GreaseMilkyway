<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme for ReDD Focus Android - Dark Mode -->
    <style name="Base.Theme.GreaseMilkyway" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Primary brand color - lighter/brighter in dark mode for visibility -->
        <item name="colorPrimary">@color/primary_blue</item>
        
        <!-- Darker variant of primary -->
        <item name="colorPrimaryVariant">@color/primary_blue</item>
        
        <!-- Color of text/icons on top of primary color -->
        <item name="colorOnPrimary">@color/text_dark</item>
        
        <!-- Background color for the app - dark gray -->
        <item name="android:windowBackground">@color/background_main</item>
        
        <!-- Accent color for FABs and other accents -->
        <item name="colorSecondary">@color/primary_blue</item>
        <item name="colorOnSecondary">@color/text_dark</item>
        
        <!-- Status bar color -->
        <item name="android:statusBarColor">@color/header_bg</item>
        
        <!-- Make status bar icons light in dark mode -->
        <item name="android:windowLightStatusBar" tools:targetApi="m">false</item>
    </style>
</resources>