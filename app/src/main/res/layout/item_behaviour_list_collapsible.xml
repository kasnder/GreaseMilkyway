<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <!-- Clickable header with title and dropdown arrow -->
    <LinearLayout
        android:id="@+id/header_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="16dp"
        android:background="?android:attr/selectableItemBackground"
        android:clickable="true">

        <TextView
            android:id="@+id/header_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Behavioral Controls"

            android:textAppearance="?attr/textAppearanceHeadline6" />


        <ImageView
            android:id="@+id/expand_icon"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/expand_circle_down_outline"
            android:layout_gravity="center_vertical" />

    </LinearLayout>

    <!-- Collapsible content with the switches -->
    <LinearLayout
        android:id="@+id/content_behavioral"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:visibility="gone"
        android:paddingTop="8dp"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        android:paddingBottom="8dp">

        <Switch
            android:id="@+id/switch_youtube_scroll"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Show reminder to take a break" />

        <Switch
            android:id="@+id/switch_ig_nearend"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Notify when no new content is left- Ig" />

    </LinearLayout>

</LinearLayout>